<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="250"
        x:Class="Blagodat.MainWindow"
        Width="400" 
        Height="250"
        Title="Blagodat">
    <StackPanel>
        <TextBlock FontSize="27" Margin="0,20,0,0" HorizontalAlignment="Center">Вход в систему</TextBlock>
        <TextBox Name="login" Margin="10,30,0,0" Width="200" Watermark="Логин"></TextBox>
        <TextBox Name="password" Margin="10,10,0,0" Width="200" Watermark="Пароль"></TextBox>
        <Button Click="Button_OnClick" Margin="0,10,0,0" HorizontalAlignment="Center">Войти</Button>
    </StackPanel>
</Window>
